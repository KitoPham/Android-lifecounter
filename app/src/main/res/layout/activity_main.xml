<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.washington.kpham97.lifecounter.MainActivity"
    android:weightSum="1"
    android:baselineAligned="false">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:baselineAligned="false"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:baselineAligned="false"
            android:id="@+id/left"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            tools:ignore="NestedWeights">

            <LinearLayout
                android:id="@+id/player1"
                android:orientation="vertical"
                tools:ignore="NestedWeights,NotSibling,UselessParent"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/player1score"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/defLife"
                        android:textSize="20sp"
                        tools:ignore="DuplicateIds,ObsoleteLayoutParam"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:background="#ff0000"
                        android:textColor="#ffffff"
                        android:padding="3dp"
                        android:layout_weight="2"
                        android:textAlignment="center" />

                    <TextView
                        android:layout_height="wrap_content"

                        android:text="@string/player_1"
                        android:ems="10"
                        android:id="@+id/editText"
                        android:textSize="20sp"
                        android:layout_width="match_parent"
                        android:layout_weight="1" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/player1score"
                    android:layout_marginTop="2dp"
                    tools:ignore="ObsoleteLayoutParam"
                    android:layout_weight="1">

                    <Button
                        android:text="@string/_1"
                        android:id="@+id/oneAdd1"

                        android:layout_width="0dp"
                        android:layout_toEndOf="@+id/oneSub1"
                        android:layout_toRightOf="@+id/oneSub1"
                        tools:ignore="DuplicateIds,SmallSp"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:layout_height="match_parent" />

                    <Button
                        android:text="@string/_1n"
                        android:id="@+id/oneSub1"
                        android:layout_below="@+id/player1score"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        tools:ignore="DuplicateIds,InefficientWeight,ObsoleteLayoutParam,SmallSp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:textSize="16sp"
                        android:layout_height="match_parent" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:text="@string/_5"
                        android:id="@+id/oneAdd5"

                        android:layout_below="@+id/twoAdd1"
                        android:layout_alignLeft="@+id/twoAdd1"
                        android:layout_alignStart="@+id/twoAdd1"
                        android:layout_width="0dp"
                        tools:ignore="DuplicateIds,ObsoleteLayoutParam,SmallSp"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:layout_height="match_parent" />

                    <Button
                        android:text="@string/_5n"
                        android:id="@+id/oneSub5"

                        tools:ignore="DuplicateIds,SmallSp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:textSize="16sp"
                        android:layout_height="match_parent" />
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_height="0dp"
                android:id="@+id/player2"
                android:orientation="vertical"
                tools:ignore="NotSibling,UselessParent"
                android:layout_weight="1"
                android:layout_width="fill_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/player2score"
                        android:text="@string/defLife"
                        android:textSize="20sp"
                        tools:ignore="DuplicateIds,ObsoleteLayoutParam"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:background="#ff0000"
                        android:textColor="#ffffff"
                        android:padding="3dp"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:textAlignment="center" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="@string/player_2"
                        android:ems="10"
                        android:id="@+id/editText"
                        tools:ignore="DuplicateIds"
                        android:textSize="20sp"
                        android:layout_weight="1" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/player2score"
                    android:layout_marginTop="2dp"
                    tools:ignore="ObsoleteLayoutParam"
                    android:layout_weight="1">

                    <Button
                        android:text="@string/_1"
                        android:id="@+id/twoAdd1"

                        android:layout_width="0dp"
                        android:layout_toEndOf="@+id/oneSub1"
                        android:layout_toRightOf="@+id/oneSub1"
                        tools:ignore="DuplicateIds,SmallSp"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:layout_height="match_parent" />

                    <Button
                        android:text="@string/_1n"
                        android:id="@+id/twoSub1"

                        android:layout_width="0dp"
                        android:layout_below="@+id/player1score"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        tools:ignore="DuplicateIds,InefficientWeight,ObsoleteLayoutParam,SmallSp"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:layout_height="match_parent" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:text="@string/_5"
                        android:id="@+id/twoAdd5"

                        android:layout_below="@+id/twoAdd1"
                        android:layout_alignLeft="@+id/twoAdd1"
                        android:layout_alignStart="@+id/twoAdd1"
                        android:layout_width="0dp"
                        tools:ignore="DuplicateIds,ObsoleteLayoutParam,SmallSp"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:layout_height="match_parent" />

                    <Button
                        android:text="@string/_5n"
                        android:id="@+id/twoSub5"

                        android:layout_width="0dp"
                        tools:ignore="DuplicateIds,SmallSp"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:layout_height="match_parent" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:baselineAligned="false"
            android:id="@+id/right"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp">

            <LinearLayout
                android:layout_height="0dp"
                android:id="@+id/player3"
                android:orientation="vertical"
                tools:ignore="NestedWeights,NotSibling,UselessParent"
                android:layout_weight="1"
                android:layout_width="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:id="@+id/p3txt"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/player3score"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/defLife"
                        android:textSize="20sp"
                        tools:ignore="DuplicateIds,ObsoleteLayoutParam"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:background="#ff0000"
                        android:textColor="#ffffff"
                        android:padding="3dp"
                        android:layout_weight="2"
                        android:textAlignment="center" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="@string/player_3"
                        android:ems="10"
                        android:layout_weight="1"
                        android:textSize="20sp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/player1score"

                    android:layout_marginTop="2dp"
                    tools:ignore="ObsoleteLayoutParam"
                    android:id="@+id/p3tpbut"
                    android:layout_weight="1">

                    <Button
                        android:text="@string/_1n"
                        android:id="@+id/threeSub1"

                        android:layout_below="@+id/player1score"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        tools:ignore="DuplicateIds,InefficientWeight,ObsoleteLayoutParam,SmallSp"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:layout_height="match_parent"
                        android:layout_width="0dp" />

                    <Button
                        android:text="@string/_1"
                        android:id="@+id/threeAdd1"

                        android:layout_toEndOf="@+id/oneSub1"
                        android:layout_toRightOf="@+id/oneSub1"
                        tools:ignore="DuplicateIds,SmallSp"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:layout_height="match_parent"
                        android:layout_width="0dp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:text="@string/_5"
                        android:id="@+id/threeAdd5"
                        android:layout_below="@+id/twoAdd1"
                        android:layout_alignLeft="@+id/twoAdd1"
                        android:layout_alignStart="@+id/twoAdd1"
                        android:layout_width="0dp"
                        tools:ignore="DuplicateIds,ObsoleteLayoutParam,SmallSp"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:layout_height="match_parent" />

                    <Button
                        android:text="@string/_5n"
                        android:id="@+id/threeSub5"
                        android:layout_width="0dp"
                        tools:ignore="DuplicateIds,SmallSp"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:layout_height="match_parent" />
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_height="0dp"
                android:id="@+id/player4"
                android:orientation="vertical"
                tools:ignore="NotSibling,UselessParent"
                android:layout_weight="1"
                android:layout_width="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    tools:ignore="NestedWeights">

                    <TextView
                        android:id="@+id/player4score"
                        android:layout_width="match_parent"
                        android:text="@string/defLife"
                        android:textSize="20sp"
                        tools:ignore="DuplicateIds,ObsoleteLayoutParam"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:background="#ff0000"
                        android:textColor="#ffffff"
                        android:padding="3dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:textAlignment="center" />

                    <TextView
                        android:layout_height="wrap_content"

                        android:text="@string/player_4"
                        android:ems="10"
                        tools:ignore="DuplicateIds"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:layout_width="match_parent" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/player1score"

                    android:layout_marginTop="2dp"
                    tools:ignore="ObsoleteLayoutParam"
                    android:layout_weight="1">

                    <Button
                        android:text="@string/_1"
                        android:id="@+id/fourAdd1"

                        android:layout_width="0dp"
                        android:layout_toEndOf="@+id/oneSub1"
                        android:layout_toRightOf="@+id/oneSub1"
                        tools:ignore="DuplicateIds,SmallSp"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:layout_height="match_parent" />

                    <Button
                        android:text="@string/_1n"
                        android:id="@+id/fourSub1"

                        android:layout_width="0dp"
                        android:layout_below="@+id/player1score"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        tools:ignore="DuplicateIds,InefficientWeight,ObsoleteLayoutParam,SmallSp"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:layout_height="match_parent" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:text="@string/_5"
                        android:id="@+id/fourAdd5"

                        android:layout_below="@+id/twoAdd1"
                        android:layout_alignLeft="@+id/twoAdd1"
                        android:layout_alignStart="@+id/twoAdd1"
                        android:layout_width="0dp"
                        tools:ignore="DuplicateIds,ObsoleteLayoutParam,SmallSp"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:layout_height="match_parent" />

                    <Button
                        android:text="@string/_5n"
                        android:id="@+id/fourSub5"

                        android:layout_width="0dp"
                        tools:ignore="DuplicateIds,SmallSp"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:layout_height="match_parent" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/youLose" />


</LinearLayout>
